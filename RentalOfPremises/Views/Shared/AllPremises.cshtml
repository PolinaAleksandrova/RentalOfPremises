@model Premises
@using RentalOfPremises.Data.Models

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDescription</p>
    <p>Price: @Model.Price.ToString("c")</p>
    <p><a class=" btn btn-warning" asp-controller="Cart" asp-action="addToCart" asp-route-id="@Model.Id">Додати до обраних</a></p>
</div>